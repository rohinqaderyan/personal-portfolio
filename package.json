{
  "name": "personal-portfolio",
  "version": "1.2.0",
  "description": "Professional portfolio website for Ahmad Rohin Qaderyan - Senior Full Stack Developer & Data Scientist. Built with Next.js 14, React 18, TypeScript, and Tailwind CSS.",
  "author": "Ahmad Rohin Qaderyan <ahmad.qaderyan@pfizer.com>",
  "license": "MIT",
  "homepage": "https://rqdev.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohinqaderyan/personal-portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/rohinqaderyan/personal-portfolio/issues",
    "email": "ahmad.qaderyan@pfizer.com"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "next.js",
    "next14",
    "react",
    "react18",
    "typescript",
    "tailwind",
    "tailwindcss",
    "full-stack",
    "data-science",
    "frontend",
    "backend",
    "web-development",
    "FAANG",
    "senior-developer",
    "Alexandria-VA"
  ],
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "prepare": "husky install",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.9.0",
    "lucide-react": "^0.365.0",
    "marked": "^12.0.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^1.5.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
