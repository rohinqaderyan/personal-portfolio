# Flask Configuration
FLASK_ENV=development
PORT=5000

# Email Provider Settings
# Choose your email provider and set the appropriate API key

# Example: SendGrid
MAIL_PROVIDER_API_KEY=your_sendgrid_api_key_here

# Example: Mailgun
# MAIL_PROVIDER_API_KEY=your_mailgun_api_key_here

# Example: AWS SES (requires AWS credentials in ~/.aws/credentials)
# MAIL_PROVIDER_API_KEY=not_required_for_ses

# Email Addresses
MAIL_FROM=noreply@yourdomain.com
MAIL_TO=your@email.com
